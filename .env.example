# Self-Evolving Agents - Environment Configuration
# Copy this file to .env and fill in your actual values

# Claude API Configuration (for agent runtime)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Synthetic Data Generation APIs
OPENAI_API_KEY=your_openai_api_key_here         # Required for generating synthetic training data
GOOGLE_API_KEY=your_google_api_key_here         # Required for generating synthetic training data

# Optional: Hugging Face (for Level 1 RUN local fine-tuning)
HF_TOKEN=your_huggingface_token_here

# Model Configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=2000
TEMPERATURE=0.7

# Level 1 Configuration
PATTERNS_FILE=data/patterns.json
CONVERSATIONS_FILE=data/conversations.json

# Level 2 Configuration
TOOLS_DIRECTORY=src/level2/tools
GENERATED_TOOLS_PREFIX=generated_

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# Demo Configuration
STREAMLIT_PORT=8501
DEMO_CACHE_ENABLED=true
